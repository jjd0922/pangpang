<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.newper.mapper.GoodsMapper">
    <select id="selectWareHouseDataTable" resultType="Map">
        SELECT
            WH_IDX,
            WH_NAME,
            CONCAT(POST, ' ', ADDR1, ' ', ADDR2, ' ', ADDR3, ' ', ADDR4, ' ') AS 'ADDRESS'
        FROM
            warehouse
        LIMIT
            #{start}, #{length}
    </select>

    <select id="countWareHouseDataTable" resultType="Integer">
        SELECT
            COUNT(*)
        FROM
            warehouse
    </select>
    <sql id="includeProcessBoardDatatable">

    </sql>
    <select id="selectProcessBoardDatatable" resultType="map" parameterType="map">
        SELECT
            *
        FROM
            GOODS
        <where>
            <include refid="includeProcessBoardDatatable"></include>
        </where>
        <if test="length!=-1">
            LIMIT #{start},#{length}
        </if>
    </select>
    <select id="countProcessBoardDatatable" resultType="Long" parameterType="map">
        SELECT
            count(*)
        FROM
            GOODS
        <where>
            <include refid="includeProcessBoardDatatable"></include>
        </where>
    </select>

</mapper>