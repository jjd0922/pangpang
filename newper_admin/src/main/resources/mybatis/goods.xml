<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.newper.mapper.GoodsMapper">
    <select id="selectWareHouseDataTable" resultType="Map">
        SELECT
            WH_IDX,
            WH_NAME,
            CONCAT(POST, ' ', ADDR1, ' ', ADDR2, ' ', ADDR3, ' ', ADDR4, ' ') AS 'ADDRESS'
        FROM
            warehouse
        LIMIT
            #{start}, #{length}
    </select>

    <select id="countWareHouseDataTable" resultType="Integer">
        SELECT
            COUNT(*)
        FROM
            warehouse
    </select>
</mapper>