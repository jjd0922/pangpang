<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.newper.mapper.ShopMapper">
    <sql id="includeShopDatatable">

    </sql>
    <select id="selectShopDatatable" resultType="map">
        SELECT
            SHOP.*
        FROM
            SHOP
        <where>
            <include refid="includeShopDatatable"></include>
        </where>
        <if test="length!=-1">
            limit #{start},#{length}
        </if>
    </select>
    <select id="countShopDatatable" resultType="Integer">
        SELECT
            COUNT(*)
        FROM
            SHOP
        <where>
            <include refid="includeShopDatatable"></include>
        </where>
    </select>
</mapper>
